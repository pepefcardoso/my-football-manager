{
  "name": "my-football-manager",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:win": "npm run type-check && vite build && electron-builder --win --x64",
    "build:mac": "npm run type-check && vite build && electron-builder --mac",
    "build:linux": "npm run type-check && vite build && electron-builder --linux",
    "type-check": "tsc --noEmit",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "deps:validate": "depcruise src",
    "deps:graph": "depcruise src --include-only \"^src/services\" --output-type archi > dependency-graph.html",
    "deps:services": "tsx scripts/generate-service-map.ts",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx src/db/seed.ts",
    "rebuild-electron": "electron-rebuild -f -w better-sqlite3",
    "rebuild": "npm rebuild better-sqlite3",
    "test": "vitest"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.12",
    "better-sqlite3": "^12.5.0",
    "drizzle-orm": "^0.45.0",
    "jsdom": "^27.3.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "^3.6.0",
    "vitest": "^4.0.15",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "dependency-cruiser": "^16.2.0",
    "drizzle-kit": "^0.31.8",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "png2icons": "^2.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  }
}
